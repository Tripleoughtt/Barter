block my trades
  .row
    .col-md-9
      .row
        h3.col-md-12 My Items
      h4.col-md-12 Select an Item to Offer for Trade!
    .col-md-2
    .row
      button(disabled).btn.btn-responsive.btn-info#trade Traaaaade!!!
  .row
    table.table.table-striped.table-hover.table-condensed.table-responsive
      tr
        th.col-md-6 Item
        th.col-md-6.pull-right Offer Item!
        
          
      if data.myItems
        each item in data.myItems
          tr
            td.item
              h4= item.itemName
            td.pull-right  
              .btn.forTrade
                input.offer(type="radio" name="offer") 

