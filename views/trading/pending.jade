block pending modal
  #pendingModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='user1 user2 item1 item2', area-describedby='pending trades')
    .modal-dialog.modal-lg(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          h3.modal-title Pending Trades
        .modal-body
          .row
            .trade.col-md-12
              if data.pendingTrades    
                each trade in data.pendingTrades      
                  .row
                    h4.col-md-10 #{trade.requestingUser.username} wants to offer #{trade.responseItem.itemName} for #{trade.respondingUser.username}'s #{trade.requestedItem.itemName}.
                    .col.md.1
                      if data.currentUser === trade.respondingUser.username
                        .btn.btn-responsive.btn-info.acceptTrade.pull-right(id= trade._id) Accept!
                      else
                        .btn.btn-responsive.btn-info.cancelTrade.pull-right(id= trade._id) Cancel?
                    



            //- form.form-horizontal
              .row.form-group
                label.col-sm-4.control-label(for='username') Item
                .col-sm-4
                  input#itemName.form-control(type='text', placeholder='Item', autofocus)
              .row.form-group
                label.col-sm-4.control-label(for='text') Description
                .col-sm-4
                  input#itemDescription.form-control(type='text', placeholder='description')
              #emptyFormWarn.warning.message All fields must be filled
              #tryAgain.warning.message Error.  Please try again.
        .modal-footer
          button.cancel.btn.btn-default(type='button', data-dismiss='modal') Cancel
          button#saveNewItem.btn.btn-primary(type='button') Save
