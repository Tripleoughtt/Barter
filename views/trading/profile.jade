extends ../layout.jade

block css
  link(rel='stylesheet', href="stylesheets/trading/profile.css")

block profile modal
  #profileModal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='', area-describedby='add new items here')
    .modal-dialog.modal-lg(role='document')
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal', aria-label='Close')
            span(aria-hidden='true') Ã—
          h4.modal-title Add new item
        .modal-body
          .row
            form.form-horizontal
              .row.form-group
                label.col-sm-4.control-label(for='username') Item
                .col-sm-4
                  input#itemName.form-control(type='text', placeholder='Item', autofocus)
              .row.form-group
                label.col-sm-4.control-label(for='text') Description
                .col-sm-4
                  input#itemDescription.form-control(type='text', placeholder='description')
              #emptyFormWarn.warning.message All fields must be filled
              #tryAgain.warning.message Error.  Please try again.
        .modal-footer
          button.cancel.btn.btn-default(type='button', data-dismiss='modal') Cancel
          button#saveNewItem.btn.btn-primary(type='button') Save
          button#edit.btn.btn-primary(type='button') Save

block js
    script(src='js/trading/profile.js')
