block public trades
  .row
    h3.col-md-12 My Items
    h4 select one item to trade for
  .row
    table.table.table-striped.table-hover.table-condensed.table-responsive
      tr
        th.col-md-6 Item
        th.col-md-6.pull-right Request Item?
      if data.publicItems
        each item in data.publicItems
          tr
            td.item
              h4= item.itemName
            td.pull-right  
              .btn.forTrade
                input(type="checkbox") 
